{
    "editor.formatOnSave": true,

    // Domy≈õlny formatter
    "editor.defaultFormatter": "esbenp.prettier-vscode",

    // Specyficzne ustawienia dla Astro
    "[astro]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // ESLint walidacja
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "astro"
    ],
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    }
}
