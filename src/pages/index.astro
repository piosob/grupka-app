---
import MainLayout from '../layouts/MainLayout.astro';
import LandingHero from '../components/LandingHero.astro';
import FeaturesGrid from '../components/FeaturesGrid.astro';
import HowItWorksTimeline from '../components/HowItWorksTimeline.astro';
import EventPreviewSection from '../components/EventPreviewSection.astro';
import CTASection from '../components/CTASection.astro';
import FooterContact from '../components/FooterContact.astro';

import {
    heroContent,
    features,
    howItWorksSteps,
    eventPreview,
    ctaSectionButtons,
    footerContact,
} from '../lib/landingPageData';

export const prerender = true;
---

<MainLayout title="Strona Główna">
    <LandingHero content={heroContent} />
    <FeaturesGrid features={features} />
    <HowItWorksTimeline steps={howItWorksSteps} />
    <EventPreviewSection event={eventPreview} />
    <CTASection
        ctaButtons={ctaSectionButtons}
        helperText="Zaloguj się lub utwórz konto, aby zacząć organizować urodziny i prezenty dla dzieci w Twojej grupie."
    />
    <FooterContact contact={footerContact} />
</MainLayout>
