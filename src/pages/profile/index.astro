---
import MainLayout from '../../layouts/MainLayout.astro';

// User must be authenticated to access this page (protected by middleware)
const user = Astro.locals.user;

if (!user) {
    return Astro.redirect('/login');
}

export const prerender = false;
---

<MainLayout title="Profil">
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-3xl font-bold mb-6">Profil użytkownika</h1>

            <div class="bg-card rounded-lg border p-8">
                <div class="space-y-4">
                    <div>
                        <label class="text-sm font-medium text-muted-foreground">Email</label>
                        <p class="text-lg">{user.email}</p>
                    </div>

                    <div class="border-t pt-4">
                        <p class="text-sm text-muted-foreground">
                            Strona profilu będzie wkrótce rozbudowana o więcej opcji.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</MainLayout>

