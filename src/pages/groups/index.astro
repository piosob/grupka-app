---
import MainLayout from '../../layouts/MainLayout.astro';

// User must be authenticated to access this page (protected by middleware)
const user = Astro.locals.user;

if (!user) {
    return Astro.redirect('/login');
}

export const prerender = false;
---

<MainLayout title="Moje grupy">
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-3xl font-bold mb-6">Moje grupy</h1>

            <div class="bg-card rounded-lg border p-8 text-center">
                <p class="text-muted-foreground mb-4">
                    Strona grup będzie wkrótce dostępna.
                </p>
                <p class="text-sm text-muted-foreground">
                    Jesteś zalogowany jako: <strong>{user.email}</strong>
                </p>
            </div>
        </div>
    </div>
</MainLayout>

