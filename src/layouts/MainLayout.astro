---
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';
import { Toaster } from '../components/ui/sonner';
import Logo from '@/components/astro/Logo.astro';
import { UserNav } from '../components/react/UserNav';
import { MobileMoreMenu } from '../components/react/MobileMoreMenu';

interface Props {
    title: string;
    groupId?: string; // for group context pages
    fullWidth?: boolean;
}

const { title, groupId, fullWidth = false } = Astro.props;
const user = Astro.locals.user;

---

<!doctype html>
<html lang="pl" class="dark" style="scrollbar-gutter: stable;">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title} | Grupka</title>
        <ClientRouter />
    </head>
    <body>
        <div class="flex flex-col min-h-screen">
            <!-- Top Bar -->
            <header class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
                <div class="container mx-auto flex h-14 items-center px-4">
                    <div class="mr-4 flex items-center">
                        <Logo />
                    </div>
                 
                    <!-- Profile Menu (right) - avatar + dropdown -->
                    <nav class="flex items-center space-x-2 ml-auto">
                        <UserNav userEmail={user?.email} client:load />
                    </nav>
                </div>
            </header>

            <!-- Main Content -->
            <main class={`flex-1 ${fullWidth ? '' : 'container mx-auto px-4 py-6'}`}>
                <slot />
            </main>

            <!-- Bottom Navigation (Mobile) -->
            {groupId && (
                <footer class="fixed inset-x-0 bottom-0 z-50 border-t bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 md:hidden">
                    <nav class="flex h-14 items-center justify-around">
                        <!-- Placeholder for Bottom Nav Items -->
                        <a href={`/groups/${groupId}/events`} class="flex flex-col items-center justify-center text-xs">
                            <span class="text-lg">ðŸŽ‚</span>
                            <span>Wydarzenia</span>
                        </a>
                        <a href={`/groups/${groupId}/children`} class="flex flex-col items-center justify-center text-xs">
                            <span class="text-lg">ðŸ‘¶</span>
                            <span>Dzieci</span>
                        </a>
                        <a href={`/groups/${groupId}/members`} class="flex flex-col items-center justify-center text-xs">
                            <span class="text-lg">ðŸ‘¥</span>
                            <span>CzÅ‚onkowie</span>
                        </a>
                        <div class="h-full flex items-center justify-center min-w-[64px]">
                            <MobileMoreMenu groupId={groupId} client:load />
                        </div>
                    </nav>
                </footer>
            )}
        </div>
        <Toaster client:only position="top-center" />
    </body>
</html>

<style is:global>
    html,
    body {
        margin: 0;
    }
</style>
